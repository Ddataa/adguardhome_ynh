{
    "name": "AdGuard Home",
    "id": "adguardhome",
    "packaging_format": 1,
    "description": {
        "en": "AdGuard Home package for YunoHost.",
        "fr": "AdGuard Home pour YunoHost."
    },
    "version": "0.106.3~ynh1",
    "url": "https://github.com/AdguardTeam/AdGuardHome",
    "license": "free",
    "maintainer": {
        "name": "liberodark",
        "email": "liberodark@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 4.2.4"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/",
                "default": "/"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "admin",
                "type": "user",
                "example": "johndoe"
            },
            {
                "name": "password",
                "type": "password",
                "example": "Choose a password"
            }
        ]
    }
}
